<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    android:importantForAccessibility="yes">

    <!-- Logo -->

    <!-- Mascot + Speech Bubble -->

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="348dp"
        android:layout_height="280dp"
        android:layout_marginTop="112dp"
        android:contentDescription="@string/app_name"
        android:importantForAccessibility="yes"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/mascotContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp">

        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

    <!-- CLIENT BUTTON -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnClient"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:contentDescription="@string/client_button_description"
        android:focusable="true"
        android:importantForAccessibility="yes"
        app:cardBackgroundColor="@color/client_orange"
        app:cardCornerRadius="20dp"
        app:cardElevation="14dp"
        app:layout_constraintBottom_toTopOf="@+id/btnCompany"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mascotContainer"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription=""
                android:src="@drawable/iconclient"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/client_title"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.95"
                    android:text="@string/client_subtitle"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- INSTALLATEUR BUTTON -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnCompany"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:contentDescription="@string/installer_button_description"
        android:focusable="true"
        android:importantForAccessibility="yes"
        app:cardBackgroundColor="@color/installer_blue"
        app:cardCornerRadius="20dp"
        app:cardElevation="14dp"
        app:layout_constraintBottom_toTopOf="@+id/btnAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnClient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription=""
                android:src="@drawable/iconinstalleur"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:text="@string/installer_title"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.95"
                    android:text="@string/installer_subtitle"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ADMIN BUTTON -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnAdmin"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:contentDescription="@string/admin_button_description"
        android:focusable="true"
        android:importantForAccessibility="yes"
        app:cardBackgroundColor="@color/admin_dark"
        app:cardCornerRadius="20dp"
        app:cardElevation="14dp"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCompany">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription=""
                android:src="@drawable/iconadmin"
                app:tint="@color/white" />

            <LinearLayout
                android:layout_width="161dp"
                android:layout_height="62dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_title"
                    android:textColor="@color/white"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.95"
                    android:text="@string/admin_subtitle"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Footer -->

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="93dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="119dp"
            android:layout_height="49dp"
            android:alpha="0.9"
            android:contentDescription="@string/anme_logo_description"
            android:src="@drawable/logoanmefr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:importantForAccessibility="yes"
            android:text="@string/partnership_text"
            android:textColor="#555555"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivMascot"
        android:layout_width="108dp"
        android:layout_height="116dp"
        android:contentDescription="@string/mascot_description"
        android:importantForAccessibility="yes"
        android:src="@drawable/mascott"
        app:layout_constraintBottom_toTopOf="@+id/btnClient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo"
        app:layout_constraintVertical_bias="0.625" />

    <TextView
        android:layout_width="330dp"
        android:layout_height="132dp"
        android:layout_gravity="center"
        android:layout_marginTop="88dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="14dp"
        android:text="@string/welcome_message"
        android:textColor="@color/client_orange"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.901"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="232dp"
        android:layout_height="35dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="4dp"
        android:text="@string/role_message"
        android:textColor="@color/client_orange"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnClient"
        app:layout_constraintEnd_toEndOf="@+id/ivMascot" />

</androidx.constraintlayout.widget.ConstraintLayout>